
enum EventType
{
    TE_MOUSE_LEFT_DOWN = 0,
    TE_MOUSE_LEFT_UP = 1,
    TE_MOUSE_RIGHT_DOWN = 2,
    TE_MOUSE_RIGHT_UP = 3
};

class Event: public Ref
{
    Event(int key);
    virtual ~Event();

    int getKey() { return _key; }

};


class MouseEvent: public Event
{
    MouseEvent(int key, float x, float y);
    virtual ~MouseEvent();
    
    int getKey() { return _key; }
    
    float getX() { return _x; }
    float getY() { return _y; }
};
